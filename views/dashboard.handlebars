<div class="row container center-form">
  <div class="col-md-12">
    <h2>Create New Post</h2>
    <form class="new-post-form">
      <div class="form-group">
        <label for="post-title">Title</label>
        <input type="text" class="form-control" id="post-title" name="post-title">
      </div>
      <div class="form-group">
        <label for="post-text">Description</label>
        <input type="text" class="form-control" id="post-text" name="post-text">
      </div>
      <button type="submit" class="btn btn-success btn-submit">Add Post <i class="fas fa-plus"></i></button>
    </form>
  </div>
</div>

{{#if posts.length}}
<section class="center-post justify-content-center">
  <h2>Your Posts</h2>
  <br/>
  <ul class="list-inline ">
    {{#each posts as |post|}}
    <li>
      <div class="row justify-content-end ">
        <div class="col-8"> </div>
        <a class="col-3" href="/dashboard/edit/{{post.id}}" class="btn btn-primary edit-link">Edit <i class="fas fa-edit"></i> </a>
      </div>
      {{> post-info post}}
    </li>
     <br/>
    {{/each}}
   
  </ul>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>