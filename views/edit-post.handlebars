<div class="center-form" style="padding-bottom:0% !important;">
  <div class="d-flex align-items-end flex-column">
    <a class="p-2 btn btn-outline-secondary m-R" href="/dashboard"> <i class="far fa-arrow-alt-circle-left"></i> Back to dashboard</a>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h2>Edit Post</h2>
      <form class="edit-post-form">
        <div class="form-group">
          <label for="post-title" class="font-title">Title</label>
          <input class="form-control" name="post-title" type="text" value="{{post.title}}">
        </div>
        <div class="form-group">
          <label for="post-text"  class="font-title">Description</label>
          <input class="form-control" name="post-text" type="text" value="{{post.post_text}}">
        </div>
        <span class="text-muted">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</span>
        <br/>
        <br/>
        <button type="submit" class="btn btn-info">Save Changes <i class="fas fa-save"></i></button>
        <button type="button" class="btn btn-danger delete-post-btn">Delete <i class="fas fa-trash-alt"></i></button>
        
      </form>
    </div>
  </div>
</div>

<div class="center-form">
  <form class="comment-form m-4">
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    <div>
      <button class="btn btn-success" type="submit">Add comment <i class="fas fa-plus"></i></button>
    </div>
  </form>

  {{> comments post.comments}}
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>