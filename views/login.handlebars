<div class="center-form">
  <form class="login-form m-4 p-4 border rounded">
    <div class="form-group">
      <h2 class="font-title">Login</h2>
    </div>
    <div class="form-group">
      <label class="font-title" for="email-login">Email:</label>
      <input class="form-control" type="text" id="email-login" />
    </div>
    <div class="form-group">
      <label class="font-title" for="password-login">Password:</label>
      <input class="form-control" type="password" id="password-login" />
    </div>

    <div>
      <button class="btn btn-info" type="submit">Login <i class="fas fa-sign-in-alt"></i></button>
    </div>
  </form>

  <form class="signup-form m-4 p-4 border rounded">
    <div class="form-group">
      <h2 class="font-title">Sign up</h2>
    </div>
    <div class="form-group">
      <label for="username-signup" class="font-title">Username:</label>
      <input class="form-control" type="text" id="username-signup" />
    </div>
    <div class="form-group">
      <label class="font-title" for="email-signup">Email:</label>
      <input class="form-control" type="text" id="email-signup" />
    </div>
    <div class="form-group">
      <label class="font-title" for="password-signup">Password:</label>
      <input class="form-control" type="password" id="password-signup" />
    </div>

    <div>
      <button class="btn btn-info" type="submit">Sign up <i class="fas fa-sign-in-alt"></i></button>
    </div>
  </form>
</div>

<script src="/javascript/login.js"></script>